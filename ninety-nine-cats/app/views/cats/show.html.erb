<style>
  table, th, td {
      border: 1px solid black;
      text-align: left;
  }
</style>

<h2>Welcome to <%= @cat.name %>'s page </h2>

<table>
  <tr>
    <th>Name</th>
    <td><%= @cat.name %></td>
  </tr>
  <tr>
    <th>Age</th>
    <td><%= @cat.age %></td>
  </tr>
  <tr>
    <th>Color</th>
    <td><%= @cat.color %></td>
  </tr>
  <tr>
    <th>Sex</th>
    <td><%= @cat.sex %></td>
  </tr>
  <tr>
    <th>Description</th>
    <td><%= @cat.description %></td>
  </tr>
</table>

<h3>Rental Requests</h3>

<table>
  <tr>
    <th>ID</th>
    <th>Rental Start Date</th>
    <th>Rental End Date</th>
    <th>Status</th>
  </tr>

  <% @cat.rental_requests.order(:start_date).each do |request| %>
    <tr>
      <td> <%= request.id%> </td>
      <td> <%= request.start_date %> </td>
      <td> <%= request.end_date %> </td>
      <td> <%= request.status %> </td>
    </tr>
  <% end %>

</table>
